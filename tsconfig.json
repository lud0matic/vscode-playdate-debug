{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["WebWorker", "ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["reflect-metadata"],
    "baseUrl": ".",
    "paths": {
      "ext/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
